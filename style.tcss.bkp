/* style.tcss */
Container {
    padding: 1;
    width: 80%;
    margin: 1;
    layout: vertical;
}

Input {
    width: 100%;
    margin-bottom: 1;
}

TextArea {
    width: 100%;
    height: 50%;  /* Reducido para acomodar el nuevo campo */
    margin-bottom: 1;
}

Container > Container {
    layout: horizontal;
    height: auto;
}

Button {
    margin-right: 1;
}
